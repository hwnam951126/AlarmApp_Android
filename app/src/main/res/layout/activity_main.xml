<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 가장 가까운 알람 시간을 표시하는 뷰 -->
    <LinearLayout
        android:id="@+id/closestAlarmLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/closestAlarmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가장 가까운 알림"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/closestAlarmTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:30 AM"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/closestAlarmRemainingTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2시간 15분 후 알림이 울립니다."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- RecyclerView for displaying the list of alarms -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alarmListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/closestAlarmLayout"
        android:clipToPadding="false"
        android:paddingBottom="80dp"/>

    <!-- FloatingActionButton for adding a new alarm -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addAlarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Alarm" />

</RelativeLayout>