<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Alarm Name 입력 필드 -->
    <EditText
        android:id="@+id/alarmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="알림 이름"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="20dp"/>

    <!-- TimePicker -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmName"
        android:timePickerMode="spinner"/>

    <!-- 요일 선택 버튼들 -->
    <LinearLayout
        android:id="@+id/weekdaySelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timePicker"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- 요일별 토글 버튼 -->
        <ToggleButton
            android:id="@+id/toggle_monday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="월"
            android:textOff="월"/>

        <ToggleButton
            android:id="@+id/toggle_tuesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="화"
            android:textOff="화"/>

        <ToggleButton
            android:id="@+id/toggle_wednesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="수"
            android:textOff="수"/>

        <ToggleButton
            android:id="@+id/toggle_thursday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="목"
            android:textOff="목"/>

        <ToggleButton
            android:id="@+id/toggle_friday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="금"
            android:textOff="금"/>

        <ToggleButton
            android:id="@+id/toggle_saturday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="토"
            android:textOff="토"/>

        <ToggleButton
            android:id="@+id/toggle_sunday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="일"
            android:textOff="일"/>

        <ToggleButton
            android:id="@+id/amPmToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="PM"
            android:textOff="AM"
            android:checked="false"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <!-- 저장 및 취소 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weekdaySelection"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="저장"
            android:background="@android:color/holo_blue_dark"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"
            android:background="@android:color/holo_red_dark"/>
    </LinearLayout>
</RelativeLayout>